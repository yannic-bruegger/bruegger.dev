---
interface Props {
  class?: string
}

const { class: className } = Astro.props
---

<button 
  type="button"
  class:list={["theme-toggle relative inline-flex items-center justify-center w-12 h-12 rounded-xl transition-all duration-200 hover:scale-105", className]}
  aria-label="Toggle theme"
  onclick="window.__toggleTheme?.()"
>
  <!-- Sun icon for dark mode (visible when dark) -->
  <svg 
    class="sun-icon w-5 h-5 absolute transition-all duration-300" 
    fill="currentColor" 
    viewBox="0 0 20 20"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd"></path>
  </svg>
  
  <!-- Moon icon for light mode (visible when light) -->
  <svg 
    class="moon-icon w-5 h-5 absolute transition-all duration-300" 
    fill="currentColor" 
    viewBox="0 0 20 20"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
  </svg>
</button>

<style>
  /* Subtle circle button style */
  .theme-toggle {
    background: rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(156, 163, 175, 0.2);
    backdrop-filter: blur(8px);
    transition: all 0.2s ease;
  }

  .theme-toggle:hover {
    border-color: rgba(156, 163, 175, 0.4);
    background: rgba(0, 0, 0, 0.15);
  }

  /* Icon visibility based on theme */
  .sun-icon {
    color: #f4f4f5;
    opacity: 1;
    transform: scale(1) rotate(0deg);
  }

  .moon-icon {
    color: #f4f4f5;
    opacity: 0;
    transform: scale(0.8) rotate(-180deg);
  }

  /* Light mode styles */
  :global(.light) .theme-toggle {
    background: rgba(255, 255, 255, 0.8);
    border-color: rgba(107, 114, 128, 0.3);
  }

  :global(.light) .theme-toggle:hover {
    border-color: rgba(107, 114, 128, 0.5);
    background: rgba(255, 255, 255, 0.9);
  }

  :global(.light) .sun-icon {
    opacity: 0;
    transform: scale(0.8) rotate(180deg);
  }

  :global(.light) .moon-icon {
    color: #374151;
    opacity: 1;
    transform: scale(1) rotate(0deg);
  }

  /* Icon rotation animation */
  .sun-icon, .moon-icon {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
</style>